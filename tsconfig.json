{
  "compilerOptions": {
  "target": "ES6",
  "module": "commonjs",
  "outDir": "./dist",
  "rootDir": "./src",   // This tells TypeScript that your source files are in the 'src' folder
  "esModuleInterop": true,
  "skipLibCheck": true,
  "experimentalDecorators": true,                  
  "emitDecoratorMetadata": true,
},
"include": ["src/**/*.ts"],
"exclude": ["node_modules", "dist"]
}